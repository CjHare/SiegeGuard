{
  "name": "5ds_api_server",
  "version": "0.0.1",
  "description": "5DS API Server",
  "author": "5DS",
  "license": "UNLICENSED",
  "main": "src/server.ts",
  "prettier": "@just_another_developer/prettier-configuration",
  "private": true,
  "scripts": {
    "build:dev": "rimraf ./dist && tsc",
    "build": "tsc",
    "coverage": "nyc npm run test",
    "document": "typedoc --options tsdoc.json",
    "lint": "eslint . --ext .ts",
    "format": "npm run format-ts && npm run format-js",
    "format-js": "prettier ./config/*.js --write",
    "format-ts": "prettier ./**/*.ts --write",
    "start": "node --trace-warnings --unhandled-rejections=strict dist/server.js",
    "start:dev": "npm run build:dev && set NODE_ENV=development && nodemon",
    "test": "npm run test-unit && npm run test-integration",
    "test-integration": "mocha --exit --recursive --require ts-node/register 'test-integration/**/*.test.ts'",
    "test-unit": "mocha --exit --recursive --require ts-node/register 'test-unit/**/*.test.ts'"
  },
  "dependencies": {
    "@just_another_developer/common-server": "0.0.10",
    "@just_another_developer/solidity": "^0.1.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "reflect-metadata": "^0.1.13",
    "web3": "^1.3.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@just_another_developer/eslint-config": "0.0.8",
    "@just_another_developer/nyc-configuration": "0.0.3",
    "@just_another_developer/prettier-configuration": "0.0.4",
    "@just_another_developer/typescript-configuration": "0.0.6",
    "@types/chai": "^4.2.14",
    "@types/express": "^4.17.9",
    "@types/mocha": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "esm": "^3.2.25",
    "husky": "^4.3.7",
    "lint-staged": "^10.5.3",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-mockito": "^2.6.1",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.14",
    "typescript": "^4.2.4"
  },
  "eslintConfig": {
    "extends": "@just_another_developer/eslint-config"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  },
  "nyc": {
    "extends": "@just_another_developer/nyc-configuration"
  }
}
